<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="floatingActionButtonStyle">@style/FabStyle</item>
        <item name="shapeAppearanceSmallComponent">@style/Shape.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.Large</item>
    </style>

    <style name="FabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearance">@style/Shape.Small.Fab</item>
    </style>

    <style name="Shape"/>

    <style name="Shape.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="Shape.Small.Fab">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Shape.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="Shape.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
    </style>

</resources>
